      document.getElementById('editRedeemAmount').value = event.target.getAttribute('coupon-maxRedeemAmount')
      document.getElementById('editExpiryDate').value = event.target.getAttribute('coupon-date')
      document.getElementById('editCouponForm').setAttribute('coupon-id',couponId)
        
