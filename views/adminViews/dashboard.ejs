<script>
  const ctx = document.getElementById('order-graph').getContext('2d');
let orderChart;

const fetchOrderStats = async (period) => {
  console.log(period);
    try {
        const response = await fetch(`/admin/dashboard/getOrderStatus?period=${period}`);
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        const data = await response.json();
        
        // Ensure the statuses and counts are properly processed
        const statuses = ['pending', 'delivered', 'returned', 'cancelled'];
        const counts = statuses.map(status => {
            const found = data.find(d => d._id.status === status);
            return found ? found.count : 0;
        });

        updateChart(period, counts);
    } catch (error) {
        console.error('Error fetching order stats:', error);
    }
};

const updateChart = (period, counts) => {
    if (orderChart) {
        orderChart.destroy();
    }

    orderChart = new Chart(ctx, {
        type: 'pie',
        data: {
          labels: ['Pending', 'Delivered', 'Returned', 'Canceled'],
        datasets: [{
            label: `Order Status - ${period}`,
            data: counts, // The counts array should have four elements, one for each status
            backgroundColor: [
              'rgba(54, 162, 235, 0.2)',  
              'rgba(75, 192, 192, 0.2)'  , 
              'rgba(255, 99, 132, 0.2)',  
                'rgba(255, 206, 86, 0.2)',  
            ],
            borderColor: [
              'rgba(54, 162, 235, 1)',   
              'rgba(75, 192, 192, 1)'    , 
              'rgba(255, 99, 132, 1)',    
                'rgba(255, 206, 86, 1)',    
            ],
            borderWidth: 1
        }]
            
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
};

document.getElementById('DailyBtn').addEventListener('click', () => fetchOrderStats('daily'));
document.getElementById('weeklyBtn').addEventListener('click', () => fetchOrderStats('weekly'));
document.getElementById('monthlyBtn').addEventListener('click', () => fetchOrderStats('monthly'));
document.getElementById('yearlyBtn').addEventListener('click', () => fetchOrderStats('yearly'));

// Initial load
fetchOrderStats('daily');
</script>

